#archive
    margin 30px 0 70px 0

.timeline-wrapper
    h2
        text-align center
        width 150px
        background #e9573f
        border-radius 3px
        -moz-border-radius 3px
        -webkit-border-radius 3px
        color #fff
        font-size 20px
        margin 0 auto

#year2013
    &:after
        content " "
        width 50px
        height 50px
        display block
        background #fff
        border 3px solid #e9573f
        position absolute
        left 50%
        margin-left 75px
        -moz-border-radius 50%
        -webkit-border-radius 50%
        border-radius 50%

.timeline
    background url("../images/timeline_bg.jpg") top center repeat-y
    padding 10px 0
    margin 0
    overflow hidden
    list-style none
    position relative
    & > li
        position relative
        clear both
        float left
        width 340px
        padding 10px
        text-align right
        margin 0
        border 1px solid #ddd
        -webkit-border-radius 3px
        -moz-border-radius 3px
        -ms-border-radius 3px
        -o-border-radius 3px
        border-radius 3px
        background #fff
        &:nth-of-type(even)
            float right
            text-align left
        & > h3
            font-size 15px
            font-size 15px
        & > span
            display block
            & > a
                font-size 15px
    li
        &:nth-of-type(even):after
            left auto
            right 100%

.timeline li:before, .timeline li:after
    content " "
    width 50px
    height 3px
    background #e9573f
    position absolute
    left 100%
    top 50%

