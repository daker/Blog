.posts-title
    font-size 45px

.post-author-name
    font-weight 400
    color #e9573f

.post-author-image
    display block
    position relative
    overflow hidden
    background #fff
    text-align right
    margin 0
    margin-bottom 10px
    border-radius 50%
    width 160px
    height 160px
    img
        width 100%
        height 100%


.post-published-date p,
.post-author-info p
    font-family "Ubuntu",Georgia,Cambria,"Times New Roman",Times,serif
    font-weight 400
    font-style italic
    font-size 14px
    line-height 1.4
    color #666665
    word-wrap break-word

.post-author-info
    margin 0
    padding 0
    clear right
    p
        margin-bottom 0

.post-author-icons
    margin-bottom 10px
    a
        text-decoration none
        color #555
        padding-right 3px
        font-size 25px
        line-height 1.5
        -webkit-transition color 200ms ease-in
        -moz-transition color 200ms ease-in
        -o-transition color 200ms ease-in
        transition color 200ms ease-in

.post-published-date,
.post-reading-time
    position relative
    padding 0
    margin 0
    padding-top 10px
    text-align right

.post-published-date:before,
.post-reading-time:before,
.post-tags:before
    content ''
    width 40px
    height 1px
    background #dededc
    position absolute
    top 0
    right 0

.post-published-date strong,
.post-reading-time strong
    font-weight 700
    font-size 14px
    color #666665

.post-tags
    position relative
    padding 0
    margin 0
    padding-top 10px
    text-align right
    strong
        font-weight 700
        font-size 14px
        color #666665
    a
        font-size 14px

.post-social
    clear both
    overflow hidden
    margin-top 5px

.post-social-button
    float left
    padding 4px

.twitter-share-button,
.twitter-count-horizontal
    width 97px !important

.buffer-button
    min-width 90px !important

.kippt-save-button
    margin-top 0 !important

.FlattrButton
    max-width 110px !important




.posts
    float left
    width 780px
    word-break break-word
    hyphens auto

.post
    margin-bottom 20px

.post-header, .post-content
    margin 30px auto 0 auto
    position relative

.post-content
    margin-top 15px
    iframe
        margin 0 auto
        margin-bottom 10px
        border 0

.post-meta-item
    font-size 1em
    color #ADA79F

.post-meta-pubdate,
.post-meta-comments
    font-size 1em
    color #ADA79F

.post-meta-comments
    padding 10px 5px

.post-title
    line-height 1
    margin-bottom 5px
    font-size 40px
    a
        font-weight 700
        text-decoration none

.post-body h1,
.post-body h2,
.post-body h3
    margin-bottom 10px


.browser-support
    text-align center
    margin-bottom 2em
    overflow hidden
    & > dfn
        display inline-block
        padding .4em
        text-align center
        width: 120px
        height: 130px
        margin-left 15px
        background url("../images/browsers.png") no-repeat
        &.unsupported
            opacity .5
            -webkit-filter blur(1px)
            & > div
                background transparent
                border 0
                min-width 45px
        & > div
            &:not(:empty)
                border 2px solid white
                border-radius 30px
                background #323A45
                color white
                display inline-block
                position relative
                top 85px
                padding 2px 5px 2px 5px
                left -45px
                min-width 45px
    & > dfn[title="opera"]
        background-position -763px -10px
    & > dfn[title="ie"]
        background-position -38px -13px
    & > dfn[title="chrome"]
        background-position -335px -10px
    & > dfn[title="canary"]
        background-position -476px -10px
    & > dfn[title="safari"]
        background-position -615px -10px
    & > dfn[title="firefox"]
        background-position -190px -10px

.row
    overflow hidden
    border 3px solid #e9573f
    -webkit-border-radius 4px
    -moz-border-radius 4px
    border-radius 4px
    input[type="email"]
        border 0
        color #ccc
        -webkit-border-radius 4px 0 0 4px
        -moz-border-radius 4px 0 0 4px
        border-radius 4px 0 0 4px
        font-size 25px
        font-family "Ubuntu", "Myriad Pro", "Lucida Grande", "Lucida Sans Unicode", "Lucida Sans", Geneva, Verdana, sans-serif
        letter-spacing 1px
        padding 9px 12px
        width 65%
        float left
    input[type="submit"]
        background #e9573f
        color white
        padding 9px 40px
        font-size 25px
        font-family "Ubuntu", "Myriad Pro", "Lucida Grande", "Lucida Sans Unicode", "Lucida Sans", Geneva, Verdana, sans-serif
        border 0
        position relative
        -moz-border-radius 0
        -ms-border-radius 0
        -o-border-radius 0
        border-radius 0
        -webkit-transition 150ms ease-out all
        -moz-transition 150ms ease-out all
        -o-transition 150ms ease-out all
        transition 150ms ease-out all
        float right
        width auto
    .icon-feed
        float left
        font-size 25px
        color #ccc
        text-decoration none
        position relative
        margin-right 13px
        top 13px

.row input[type="email"]::-webkit-input-placeholder,
.row input[type="email"]:-moz-placeholder,
.row input[type="email"]::-moz-placeholder,
.row input[type="email"]:-ms-input-placeholder
    color #ccc

.notice
    color #888
    font-size 12px
    margin-bottom 10px
    margin-top 10px
    width 70%


.powerby
    font-size 12px
    color #fff
    a
