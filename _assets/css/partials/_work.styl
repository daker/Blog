.title
    text-transform uppercase
    font-size 70px
    color #555
    margin-bottom 10px
    text-align center

.subtitle
    text-transform uppercase
    font-size 30px
    color #555
    margin-bottom 10px
    text-align center

.work
    overflow hidden
    margin 0
    margin-top 25px
    li
        padding 3px
        background #fff
        margin 0 10px 30px 0
        list-style none
        float left
        width 229px
        border 1px solid #ddd
        -moz-border-radius 3px
        -webkit-border-radius 3px
        border-radius 3px
        &:nth-child(4n
            & + 4)
                margin-right 0
        &:hover
            background #e9573f
            border 1px solid #e9573f
            transition all 0.2s
            -moz-transition all 0.2s
            -webkit-transition all 0.2s
            -o-transition all 0.2s
        img
            padding 0
            width 100%
            background #fafafa
            border none
            margin 0
            display block
            -moz-border-radius 2px
            -webkit-border-radius 2px
            border-radius 2px

