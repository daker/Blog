body
    .one
        .bsa_it_ad
            background #E96D65
            border none
            font-family inherit
            padding 10px
            margin 0
            text-align center
            border-radius 5px
            color #ffe8e7
            .bsa_it_i
                display block
                padding 0
                float none
                margin 0 0 5px
                img
                    padding 0
                    border none
                    display block
                    margin 0 auto
            .bsa_it_t
                padding 6px 0
                color #ffe8e7
            .bsa_it_d
                padding 0
                font-size 12px
                color #ffe8e7
        .bsa_it_p
            display none

body #bsap_aplink, body #bsap_aplink:hover
    display block
    font-size 10px
    margin 12px 0 0
    text-align right
    font-style italic

#bsa_demo
    text-align center
    width 180px
    height auto
    right 15px
    top 15px
    position fixed
    background rgba(233, 109, 101, 0.8)
    border none
    z-index 1000000
    color #ffe8e7
    border-radius 5px
    padding 10px

#bsa_demo_remove
    opacity 0.4
    width 24px
    height 24px
    position absolute
    top 0px
    right 0px
    background #999
    text-align center
    cursor pointer
    &:hover
        background #777
    &:before
        content 'x'
        color #fff
        font-weight 400
        font-family Arial, sans-serif

body #bsap_aplink, body #bsap_aplink:hover
    display block
    font-size 10px
    margin 12px 0 0
    text-align right
    font-style italic

#bsap_aplink
    color #fff
    text-decoration none
